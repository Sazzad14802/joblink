<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.joblink.controller.AdminDashboardController"
      spacing="20" style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>
    
    
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label fx:id="welcomeLabel" text="Admin Dashboard" style="-fx-text-fill: #333333;">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <Label text="Manage all user accounts and their activities" style="-fx-text-fill: #666666;">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
        
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                prefWidth="100">
            <font>
                <Font size="14"/>
            </font>
        </Button>
    </HBox>
    
    <Separator/>
    
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                prefWidth="120">
            <font>
                <Font size="13"/>
            </font>
        </Button>
        
        <Button fx:id="deleteButton" text="Delete Selected User" onAction="#handleDeleteUser"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                prefWidth="180">
            <font>
                <Font size="13"/>
            </font>
        </Button>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Label text="Total Users: " style="-fx-text-fill: #666666; -fx-font-weight: bold;">
            <font>
                <Font size="14"/>
            </font>
        </Label>
        <Label fx:id="totalUsersLabel" text="0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </HBox>
    
    
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="accountTypeColumn" text="Account Type" prefWidth="120" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="jobsColumn" text="Jobs Posted" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="applicationsColumn" text="Applications" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    
    
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
        <Label text="â„¹" style="-fx-text-fill: #3498db; -fx-font-weight: bold;">
            <font>
                <Font size="16"/>
            </font>
        </Label>
        <Label text="Select a user and click 'Delete Selected User' to remove an account. This will permanently delete all associated jobs and applications." 
               wrapText="true" style="-fx-text-fill: #555555;" HBox.hgrow="ALWAYS">
            <font>
                <Font size="12"/>
            </font>
        </Label>
    </HBox>
    
</VBox>
