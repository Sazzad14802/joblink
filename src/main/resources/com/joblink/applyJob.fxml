<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="267.0" prefWidth="567.0" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.joblink.controller.ApplyJobController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" style="-fx-font-size: 12px;" text="â† Back" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>
    
    <Label text="Available Jobs" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Region HBox.hgrow="ALWAYS" />
        
        <Label text="Min Salary:" />
        <TextField fx:id="minSalaryField" prefWidth="100.0" promptText="0" />
        <Button fx:id="applyFilterButton" mnemonicParsing="false" onAction="#handleApplyFilter" text="Apply Filter" />
    </HBox>
    
    <!-- ListView replaces ScrollPane and VBox for dynamic content -->
    <ListView fx:id="jobsListView" VBox.vgrow="ALWAYS" 
              style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 10;">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </ListView>
</VBox>
