<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.joblink.controller.JobFormController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="â† Back" style="-fx-font-size: 12px;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <Label fx:id="titleLabel" text="Post a Job" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    
    <GridPane hgap="10.0" vgap="10.0" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="300.0"/>
        </columnConstraints>
        
        <Label text="Job Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="titleField" promptText="e.g., Software Engineer" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="descriptionArea" promptText="Job description and requirements..." wrapText="true" prefRowCount="5" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Salary:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="salaryField" promptText="e.g., 75000" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="locationField" promptText="e.g., New York, NY" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
    
    <HBox alignment="CENTER" spacing="15.0">
        <padding>
            <Insets top="15.0"/>
        </padding>
        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" text="Post Job" style="-fx-font-size: 14px; -fx-padding: 8 25;"/>
        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" style="-fx-font-size: 14px; -fx-padding: 8 25;"/>
    </HBox>
</VBox>
