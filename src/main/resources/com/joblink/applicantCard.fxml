        <Label fx:id="nameLabel" style="-fx-text-fill: #333333; -fx-font-size: 20px; -fx-font-weight: bold;" text="name" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="statusBadge" style="-fx-background-color: #FFF3E0; -fx-text-fill: #FF9800; -fx-padding: 5 12; -fx-background-radius: 15; -fx-font-size: 12px; -fx-font-weight: bold;" text="statusbadge" />
    </HBox>
    
    <Label fx:id="emailLabel" style="-fx-text-fill: #666666; -fx-font-size: 14px;" text="email" />
    
    <Label fx:id="appliedLabel" style="-fx-text-fill: #666666; -fx-font-size: 14px;" text="date" />
     <Button fx:id="downloadCvButton" style="-fx-background-color: transparent; -fx-text-fill: #2196F3; -fx-font-size: 12px; -fx-underline: true; -fx-cursor: hand; -fx-padding: 5 0;" text="ðŸ“„ Download CV" />
    
    <HBox fx:id="buttonContainer" alignment="CENTER_RIGHT" spacing="15.0">
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="rejectButton" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;" text="âœ— Reject" />
        <Button fx:id="acceptButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;" text="âœ“ Call for Interview" />
    </HBox>
</VBox>
