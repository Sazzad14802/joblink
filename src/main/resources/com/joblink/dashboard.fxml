<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #f7fafc;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.joblink.controller.DashboardController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <Label fx:id="welcomeLabel" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Welcome, User!" textAlignment="CENTER">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: #e53e3e; -fx-font-size: 14px; -fx-border-color: #e53e3e; -fx-border-width: 2; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 20; -fx-cursor: hand;" text="Logout" />
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="50.0" left="40.0" right="40.0" top="50.0" />
            </padding>
            
            <Label fx:id="dashboardLabel" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;" text="Dashboard" textAlignment="CENTER">
                <font>
                    <Font size="32.0" />
                </font>
            </Label>
            
            <VBox alignment="CENTER" maxWidth="400" spacing="20.0">
                <Button fx:id="postJobButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handlePostJob" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 16 40; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 3);" text="ðŸ“ Post Job" />
                <Button fx:id="applyJobButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleApplyJob" style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16 40; -fx-cursor: hand;" text="ðŸ” Apply for Job" />
                <Button fx:id="myApplicationsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleMyApplications" style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16 40; -fx-cursor: hand;" text="ðŸ“‹ My Applications" />
                <Button fx:id="myJobPostsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleMyJobPosts" style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16 40; -fx-cursor: hand;" text="ðŸ“Š My Job Posts" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
