<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.joblink.controller.DashboardController" style="-fx-background-color: #f7fafc;">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
            </padding>
            <Label fx:id="welcomeLabel" text="Welcome, User!" textAlignment="CENTER" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;">
                <font>
                    <Font size="22.0"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" 
                    style="-fx-background-color: transparent; -fx-text-fill: #e53e3e; -fx-font-size: 14px; -fx-border-color: #e53e3e; -fx-border-width: 2; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="50.0" left="40.0" right="40.0" top="50.0"/>
            </padding>
            
            <Label text="Dashboard" textAlignment="CENTER" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;">
                <font>
                    <Font size="32.0"/>
                </font>
            </Label>
            
            <VBox spacing="20.0" alignment="CENTER" maxWidth="400">
                <Button fx:id="postJobButton" mnemonicParsing="false" onAction="#handlePostJob" text="ðŸ“ Post Job" maxWidth="Infinity"
                        style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 16 40; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 3);"/>
                <Button fx:id="applyJobButton" mnemonicParsing="false" onAction="#handleApplyJob" text="ðŸ” Apply for Job" maxWidth="Infinity"
                        style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16 40; -fx-cursor: hand;"/>
                <Button fx:id="myApplicationsButton" mnemonicParsing="false" onAction="#handleMyApplications" text="ðŸ“‹ My Applications" maxWidth="Infinity"
                        style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16 40; -fx-cursor: hand;"/>
                <Button fx:id="myJobPostsButton" mnemonicParsing="false" onAction="#handleMyJobPosts" text="ðŸ“Š My Job Posts" maxWidth="Infinity"
                        style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16 40; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
